  <div class="card">
  <h1>{{restaurant_name}}</h1>
      <div class="rating">
    {{#greaterThan review_stars 0}}
      <i class="rating__star fas fa-star"></i>
    {{else}}
      <i class="rating__star far fa-star"></i>
    {{/greaterThan}}
    {{#greaterThan review_stars 1}}
      <i class="rating__star fas fa-star"></i>
    {{else}}
      <i class="rating__star far fa-star"></i>
    {{/greaterThan}}
    {{#greaterThan review_stars 2}}
      <i class="rating__star fas fa-star"></i>
    {{else}}
      <i class="rating__star far fa-star"></i>
    {{/greaterThan}}
    {{#greaterThan review_stars 3}}
      <i class="rating__star fas fa-star"></i>
    {{else}}
      <i class="rating__star far fa-star"></i>
    {{/greaterThan}}
    {{#greaterThan review_stars 4}}
      <i class="rating__star fas fa-star"></i>
    {{else}}
      <i class="rating__star far fa-star"></i>
    {{/greaterThan}}
  </div>

  </div>
  <div class="card">{{description}}</div>
